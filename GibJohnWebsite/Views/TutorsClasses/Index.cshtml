@model IEnumerable<GibJohnWebsite.Models.TutorsClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<!--
    Assembles the table on the web page
-->
<div class="rounded-rectangle">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            <!--
                Puts in data thats inside the database onto the webpage table
            -->
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

<style>
    .rounded-rectangle {
        border: 3px solid #604132;
        border-radius: 15px;
        padding: 20px;
        background-color: #8e604a;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    th {
        background-color: #007bff;
        color: black;
    }

    .column-section {
        border: 3px solid #919581 !important;
    }

    tr .column-section {
        background-color: #aab396;
    }
</style>
